<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="55dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="rado.wks.Team"
        tools:showIn="@layout/app_bar_team">

        <LinearLayout
            android:id="@+id/bramkarzeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BRAMKARZE"
                android:gravity="center"/>

            <GridView
                android:id="@+id/bramkarzeGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textView14"
                android:columnWidth="90dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:nestedScrollingEnabled="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/obroncyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OBRONCY"
                android:gravity="center"/>

            <GridView
                android:id="@+id/obroncyGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="90dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pomocnicyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/obroncyLayout">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POMOCNICY"
                android:gravity="center"/>

            <GridView
                android:id="@+id/pomocnicyGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="90dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/napastnicyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/pomocnicyLayout">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAPASTNICY"
                android:gravity="center"/>

            <GridView
                android:id="@+id/napastnicyGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="90dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>