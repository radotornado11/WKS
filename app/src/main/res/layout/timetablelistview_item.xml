<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/leagueStats"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/awayResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/awayTeamTextView"
            android:layout_alignEnd="@+id/awayTeamTextView"
            android:layout_marginEnd="40dp"
            android:text="0" />

        <TextView
            android:id="@+id/homeResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dateTextView"
            android:layout_marginStart="51dp"
            android:text="2" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/dateTextView"
            android:layout_below="@+id/dateTextView"
            android:layout_marginEnd="14dp"
            android:text="15:30" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/awayTeamTextView"
            android:text="16.07.2017" />

        <TextView
            android:id="@+id/awayTeamTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/homeTeamTextView"
            android:layout_alignBottom="@+id/homeTeamTextView"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/imageButton"
            android:text="Slask WrocÅ‚aw" />

        <TextView
            android:id="@+id/homeTeamTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/homeResultTextView"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/dateTextView"
            android:text="Arka Gdynia" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@android:drawable/star_big_off" />
    </RelativeLayout>
</RelativeLayout>